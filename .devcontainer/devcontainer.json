{
  "name": "reports2",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/guiyomh/features/just:0.1.0": { "version": "1.42.4" },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "os-provided",
      "installTools": "false" // No need to install flake8, virtualenv, etc.
    },
    "ghcr.io/rocker-org/devcontainer-features/r-apt:0.5.0": { // Installs latest R version
      "installRMarkdown": "true", // Needed by quarto
      "vscodeRSupport": "full",
      "installVscDebugger": "true",
      "installRadian": "true" // Better R terminal
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "1.7.33",
      "installChromium": "true" // Needed by Mermaid diagrams
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": [ // Needed by Mermaid diagrams
        "chromium",
        "python3-tk",
        "pandoc"
      ]
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "2.27.4"
    }
  },
  "containerEnv": {
    "QUARTO_PYTHON": "/workspaces/reports2/.venv/bin/python" // Tell Quarto to use uv virtualenv python
  },
  "initializeCommand": "mkdir -p ${localEnv:HOME}/.aws",
  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached" // Mount host AWS credentials
  ],
  "remoteEnv": {
    "AWS_REGION": "us-west-2"
  },
  "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh", // Runs after features install
  "customizations": {
    "vscode": {
      "extensions": [
        "tombi-toml.tombi", // Fast TOML formatter, linter
        "nefrob.vscode-just-syntax",
        "ms-python.python",
        "charliermarsh.ruff", // Fast python formatter, linter
        "astral-sh.ty" // Fast python type checking,
        "REditorSupport.r",
        "RDebugger.r-debugger",
        "Posit.air-vscode", // Fast R formatter,
        "quarto.quarto"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/reports2/.venv/bin/python",
        "python.testing.pytestArgs": ["tests"],
        "python.testing.pytestPath": "/workspaces/reports2/.venv/bin/pytest",
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        // Enables Ruff's built-in, high-performance native server for linting and formatting.
        "ruff.nativeServer": "on",
        // Sets Ruff as the default formatter for Python files, replacing tools like black.
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true, // Needed to show plots in vscode.
        "r.rterm.linux": "/usr/local/bin/radian", // Use radian as default R terminal in vscode
        "r.rterm.option": ["--no-save", "--no-restore"], // Fresh session every time.
        "r.workspaceViewer.showObjectSize": true,
        // Set Air as the default formatter for R files.
        "[r]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "Posit.air-vscode"
        },
        // Set quarto formatter.
        "[quarto]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "quarto.quarto"
        }
      }
    }
  }
}
