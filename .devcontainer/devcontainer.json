{
  "name": "reports2",
  // As of 2025-12-25, P3M only has ARM64 binaries for Ubuntu 24.04, so we need to use the base image.
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {
      "plugins": "git colored-man-pages colorize history zsh-autosuggestions fast-syntax-highlighting zsh-autocomplete"
    },
    "ghcr.io/guiyomh/features/just:0.1.0": { "version": "1.42.4" },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "os-provided",
      "installTools": "false"
    },
    "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
      // Install R via rig package manager
      "version": "4.4",
      // Install pak package manager (stable version) for fast, efficient R package installation
      "pakVersion": "stable",
      // Install rmarkdown package - required for Quarto R document rendering
      "installRMarkdown": "true",
      // Install languageserver (autocompete, go-to definition, hover docs, diagnostics) only.
      // Normally, can also install httpgd, but it was removed from CRAN  (see https://github.com/nx10/httpgd/issues/204).
      // Instead, httpgd is installed directly from GitHub via r-packages feature below.
      "vscodeRSupport": "lsp",
      // Install vscDebugger package - required for RDebugger.r-debugger VSCode extension
      "installVscDebugger": "true",
      // Install radian - enhanced R console with multiline editing and syntax highlighting
      "installRadian": "true"
    },
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": [
        "github::nx10/httpgd",  // Interactive plot viewer for VSCode - archived from CRAN, must install from GitHub (source build)
        "pkgdepends"            // Dependency resolver required by pak - binary install from P3M on both x86_64 and arm64.
      ],
      "cranMirror": "https://p3m.dev/cran/__linux__/noble/latest",  // Use P3M binaries for Ubuntu 24.04
      "installSystemRequirements": true
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "1.7.33",
      "installChromium": "true"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "python3-tk, chromium-browser" // in addition to installChromium = "true" in quarto-cli feature, must also install shared library dependencies of Chromium
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "2.27.4"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "QUARTO_PYTHON": "/workspaces/reports2/.venv/bin/python"
  },
  // Create .aws directory on host with proper ownership for container's vscode user (UID 1000).
  // On EC2 where host runs as root, chown ensures container can access mounted directory.
  // Falls back to chmod if chown fails (e.g., non-root dev environments).
  "initializeCommand": "mkdir -p ${localEnv:HOME}/.aws && chown -R 1000:1000 ${localEnv:HOME}/.aws 2>/dev/null || chmod -R 755 ${localEnv:HOME}/.aws",
  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "AWS_REGION": "us-west-2"
  },
  "postCreateCommand": "bash ./.devcontainer/installDependencies.sh && bash ./.devcontainer/installOhmyzshPlugins.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "tombi-toml.tombi",
        "nefrob.vscode-just-syntax",
        "ms-python.python",
        "charliermarsh.ruff",
        "astral-sh.ty",
        // R extension - works with languageserver + httpgd packages (httpgd installed via r-packages feature)
        "REditorSupport.r",
        // R debugger - requires vscDebugger package (installVscDebugger: true)
        "RDebugger.r-debugger",
        // Air formatter for R - used as default formatter in [r] settings below
        "Posit.air-vscode",
        "quarto.quarto"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/reports2/.venv/bin/python",
        "python.testing.pytestArgs": ["tests"],
        "python.testing.pytestPath": "/workspaces/reports2/.venv/bin/pytest",
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "ruff.nativeServer": "on",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        // Enable bracketed paste mode for multi-line code pasting in R terminal
        "r.bracketedPaste": true,
        // Use httpgd for interactive, resizable plots in VSCode (httpgd installed via r-packages feature)
        "r.plot.useHttpgd": true,
        // Use radian as the R terminal (installed above)
        "r.rterm.linux": "/usr/local/bin/radian",
        // Don't save/restore workspace on R session exit (clean sessions)
        "r.rterm.option": ["--no-save", "--no-restore"],
        // Show memory size of objects in workspace viewer panel
        "r.workspaceViewer.showObjectSize": true,
        "[r]": {
          // Use Posit's air formatter (opinionated, fast alternative to styler)
          "editor.defaultFormatter": "Posit.air-vscode",
          // Auto-format R code using air on save
          "editor.formatOnSave": true
        }
      }
    }
  }
}
